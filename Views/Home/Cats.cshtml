@model IEnumerable<KattHem.Models.CatModel>
@{
    ViewData["Title"] = "Cats";
}

<h1>Cats</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sex)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { Id = item.Id }, new { @class = "btn btn-del" })
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="AddNew">Add new cat</a>
</div>